<?php
$_trustedDevices = $block->getTrustedCollection();
if ($_trustedDevices && count($_trustedDevices)):
    ?>
    <div class="table-wrapper mp-tfa-trusted-devices">
        <table class="data table table-devices-items" id="my-devices-table">
            <thead>
            <tr>
                <th scope="col" class="col mp-device-name"><?php echo __('Device Name') ?></th>
                <th scope="col" class="col mp-device-ip"><?php echo __('IP') ?></th>
                <th scope="col" class="col mp-device-last-login"><?php echo __('Last Logged In') ?></th>
                <th scope="col" class="col mp-device-action"></th>
            </tr>
            </thead>
            <tbody>
            <?php foreach ($_trustedDevices as $_trustedDevice): ?>
                <tr>
                    <td data-th="<?= $block->escapeHtml(__('Device Name')) ?>" class="col mp-device-name">
                        <?php echo $_trustedDevice->getName() ?>
                    </td>
                    <td data-th="<?= $block->escapeHtml(__('IP')) ?>" class="col mp-device-ip">
                        <?php echo $_trustedDevice->getDeviceIp() ?>
                    </td>
                    <td data-th="<?= $block->escapeHtml(__('Last Logged In')) ?>" class="col mp-device-last-login">
                        <?php echo $block->getFormattedDate($_trustedDevice->getLastLogin()) ?>
                    </td>
                    <td data-th="<?= $block->escapeHtml(__('Actions')) ?>" class="col mp-device-action">
                        <button type="button" id="mp-device-detele-<?php echo $_trustedDevice->getId() ?>"
                                onclick="setLocation('<?php echo $block->getDeleteUrl($_trustedDevice->getId()) ?>')">
                            <span><?php echo __('Remove') ?></span>
                        </button>
                    </td>
                </tr>
            <?php endforeach; ?>
            </tbody>
        </table>
    </div>
<?php else: ?>
    <div class="message info empty"><span><?= /* @escapeNotVerified */
            __('You have no trusted device.') ?></span></div>
<?php endif ?>

