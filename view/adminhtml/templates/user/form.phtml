<script>
    require(['jquery', 'mage/translate'], function ($, $t) {
        var tfa_enable = $('#user_mp_tfa_enable'),
            registerBtn = $('#user_mp_tfa_register'),
            disableBtn = $('#user_mp_tfa_disable'),
            tfaEnableField = $('.field-mp_tfa_enable'),
            oneCodeField = $('.field-mp_tfa_one_code'),
            secretField = $('.field-mp_tfa_secret_temp'),
            registerField = $('.field-mp_tfa_register'),
            trustFieldset = $('#user_mp_tfa_trust_device');

        /** tfa field depend on enable/disable field */
        fieldDependence(tfa_enable);
        tfa_enable.on('change', function () {
            fieldDependence(this);
        });

        function fieldDependence(tfa_enable) {
            if ($(tfa_enable).val() === '1' || typeof(tfa_enable.val()) === 'undefined' ) {
                oneCodeField.show();
                secretField.show();
                registerField.show();
                trustFieldset.show();
            } else {
                oneCodeField.hide();
                secretField.hide();
                registerField.hide();
                trustFieldset.hide();
            }
        }

        /** ajax register secret key */
        registerBtn.on('click', function () {
            var confirmCode = $('#user_mp_tfa_one_code').val(),
                secretCodeTemp = $('#user_mp_tfa_secret_temp_hidden').val(),
                userId = $('#user_user_id').val();

            $('body').loader('show');
            $.ajax({
                url: '<?php echo $block->getUrl('mptwofactorauth/tfa/register', ['form_key' => $block->getFormKey()]);?>',
                data: {
                    secret_code: secretCodeTemp,
                    confirm_code: confirmCode,
                    user_id: userId
                },
                success: function (result) {
                    if (result.status === 'invalid') {
                        $('.field-mp_tfa_register .mp-error-messages').html($t('Invalid Code'));
                    } else if (result.status === 'valid') {
                        oneCodeField.hide();
                        secretField.hide();
                        registerField.hide();
                        tfaEnableField.hide();
                        disableBtn.removeClass('hidden');
                        $('.field-mp_tfa_disable .mp-success-messages').html($t('You have been registered the TFA for this user'));
                    } else if (result.status === 'error' && result.hasOwnProperty(error)) {
                        $('.field-mp_tfa_register .mp-error-messages').html(response.error);
                    }
                },
                complete: function () {
                    $('body').loader('hide');
                }
            });
        });

        /** ajax disable tfa */
        disableBtn.on('click', function () {
            var userId = $('#user_user_id').val();

            $('body').loader('show');
            $.ajax({
                url: '<?php echo $block->getUrl('mptwofactorauth/tfa/disable', ['form_key' => $block->getFormKey()]);?>',
                data: {
                    user_id: userId
                },
                success: function (result) {
                    if (result.status === 'ok') {
                        disableBtn.addClass('hidden');
                        $('.field-mp_tfa_disable .mp-success-messages').html($t('You have been disabled the TFA for this user, please refresh the page to get the new code'));
                    } else if (result.status === 'error' && result.hasOwnProperty(error)) {
                        $('.field-mp_tfa_disable .mp-error-messages').html(response.error);
                    }
                },
                complete: function () {
                    $('body').loader('hide');
                }
            });
        });
    });
</script>
